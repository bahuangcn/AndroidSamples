<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/mBtnStart"
        android:layout_width="80dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:text="@string/strat"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/mBtnStop"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/mBtnStop"
        android:layout_width="80dp"
        android:layout_height="48dp"
        android:text="@string/stop"
        app:layout_constraintLeft_toRightOf="@+id/mBtnStart"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/mBtnStart" />

</android.support.constraint.ConstraintLayout>